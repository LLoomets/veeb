	<h2>Lisa filmitegelase ja filmi seos</h2>

	<form method="POST">
		<label for="personInput">Filmitegelane</label>
		<select name="personInput" id="personInput">
			<option value="0" selected disabled>Vali tegelane</option>
			<option value="1">Kuulus Meesnäitleja</option>
			<option value="2">Kuulus Naisnäitleja</option>
		</select>

		<label for="filmInput">Film</label>
		<select name="filmInput" id="filmInput">
			<option value="0" selected disabled>Vali film</option>
			<option value="1">Kultusfilm</option>
			<option value="2">Parim film</option>
		</select>

	</form>

	<p><%= locals.notice || 'Ootel!' %></p>
</body>
</html>